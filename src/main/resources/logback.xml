<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console appender with color support -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) [%thread] %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for JSON-RPC messages -->
    <appender name="JSONRPC_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/jsonrpc-messages.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/jsonrpc-messages.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for all application logs -->
    <appender name="APP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger for MCP messages (separate file for easy filtering) -->
    <logger name="MCP_MESSAGES" level="INFO" additivity="false">
        <appender-ref ref="JSONRPC_FILE" />
        <appender-ref ref="STDOUT" />
    </logger>

    <!-- Logger for your MCP endpoint -->
    <logger name="com.pradeepl.evidence" level="DEBUG" />

    <!-- Logger for Akka HTTP (logs raw HTTP requests/responses) -->
    <logger name="akka.http" level="DEBUG" />

    <!-- Logger for Akka HTTP server implementation (includes request bodies) -->
    <logger name="akka.http.impl.engine.server" level="DEBUG" />

    <!-- Logger for raw HTTP server requests (shows JSON-RPC payload) -->
    <logger name="akka.http.impl.engine.server.HttpServerBluePrint" level="DEBUG" />

    <!-- Logger for HTTP request parsing (shows raw request data) -->
    <logger name="akka.http.impl.engine.parsing" level="DEBUG" />

    <!-- Logger for Akka streams (reduce noise, only WARN) -->
    <logger name="akka.stream" level="WARN" />

    <!-- Logger for MCP implementation internals -->
    <logger name="akka.javasdk.impl" level="DEBUG" />

    <!-- Logger for Akka actor system (reduce noise) -->
    <logger name="akka.actor" level="INFO" />
    <logger name="akka.event" level="INFO" />

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="APP_FILE" />
    </root>

</configuration>
